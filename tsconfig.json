{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "NodeNext",          // Node 환경에서 경로 해석
    "outDir": "out",
    "lib": ["ES2022", "DOM"],                // fetch, console 등 포함
    "esModuleInterop": true,                 // node-fetch용
    "sourceMap": true,
    "rootDir": "src",
    "strict": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
