{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "out",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,

    "typeRoots":["./node_modules/@types", "./src/types"],

    "jsx": "preserve"              // ⬅️ react/jsx-runtime 요구하지 않음
  },
  "include": ["src/**/*.ts"],      // ⬅️ test 폴더는 컴파일에서 제외
  "exclude": ["node_modules", ".vscode-test", "out", "dist", "test"]
}
