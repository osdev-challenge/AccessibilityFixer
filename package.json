{
  "name": "AccessibilityFixer",
  "displayName": "AccessibilityFixer",
  "description": "Automatically detect and fix common accessibility issues in your React code, with AI-powered suggestions and quick fixes.",
  "version": "0.0.10",
  "publisher": "uno-accessibilityfixer",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.102.0",
    "node": "22.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/osdev-challenge/AccessibilityFixer.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onCommand:extension.fixAccessibility"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascriptreact",
        "aliases": [
          "JavaScript React"
        ],
        "extensions": [
          ".jsx"
        ]
      },
      {
        "id": "typescriptreact",
        "aliases": [
          "TypeScript React"
        ],
        "extensions": [
          ".tsx"
        ]
      },
      {
        "id": "typescript",
        "aliases": [
          "TypeScript"
        ],
        "extensions": [
          ".ts"
        ]
      },
      {
        "id": "javascript",
        "aliases": [
          "JavaScript"
        ],
        "extensions": [
          ".js"
        ]
      }
    ],
    "commands": [
      {
        "command": "a11yFix.showFix",
        "title": "웹 접근성 수정 제안"
      },
      {
        "command": "a11yFix.aiFix",
        "title": "AI 기반 수정 제안"
      }
    ],
    "codeActions": [
      {
        "language": "javascriptreact",
        "kind": "quickfix",
        "title": "웹 접근성 수정 제안"
      },
      {
        "language": "typescriptreact",
        "kind": "quickfix",
        "title": "웹 접근성 수정 제안"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release": "standard-version"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.44.0",
    "@html-eslint/parser": "^0.44.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint-plugin-html": "^8.1.3",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@babel/types": "^7.28.2",
    "@google/generative-ai": "^0.24.1",
    "aria-query": "^5.3.2",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "react": "^19.1.1",
    "ts-node": "^10.9.2",
    "eslint": "^9.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2"
  }
}
